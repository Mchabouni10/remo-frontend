{
  "$schema": "../node_modules/@tauri-apps/cli/config.schema.json",
  "productName": "Remo App",
  "version": "0.2.0",
  "identifier": "com.remo.app",
  "build": {
    "frontendDist": "../build",
    "devUrl": "http://localhost:3000",
    "beforeDevCommand": "npm run start",
    "beforeBuildCommand": "npm run build"
  },
  "app": {
    "windows": [
      {
        "title": "Remo",
        "width": 1280,
        "height": 800,
        "minWidth": 800,
        "minHeight": 600,
        "resizable": true,
        "fullscreen": false,
        "decorations": true,
        "transparent": false,
        "center": true
      }
    ],
    "security": {
      "csp": "default-src 'self' blob: data: filesystem: ws: wss: https://remo-backend-91sw.onrender.com tauri: 'unsafe-inline' 'unsafe-eval'"
    }
  },
  "bundle": {
    "active": true,
    "targets": ["dmg", "app"],
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ],
    "resources": [],
    "copyright": "Â© 2025 Remo App",
    "category": "Business",
    "shortDescription": "Remo Business Application",
    "macOS": {
      "minimumSystemVersion": "10.13",
      "frameworks": [],
      "signingIdentity": null,
      "entitlements": null,
      "hardenedRuntime": true
    }
  }
}
